.bt 
    border-radius 5px
    border-style solid 
    border-width 0.02em
    box-shadow soft-shadow
    color #fff
    display inline-block
    font-family Arial, Helvetica, sans-serif
    font-size 0.9em 
    font-weight 600
    margin-left 1%
    margin-top 1em
    padding 0.76em 1em
    text-transform uppercase
//Colors
.bt-green
    background-color #8bc34a
    border-color #8bc34a
.bt-purple 
    background-color #541388
    border-color #541388   
.bt-pink
    background-color #e91e63
    border-color #e91e63     
.bt-yellow
    background-color #ffd400
    border-color #ffd400        